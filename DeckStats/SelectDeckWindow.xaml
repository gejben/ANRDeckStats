<Window x:Class="DeckStats.SelectDeckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Deck Selector" Height="150" Width="200">
	<Grid>
		<ComboBox Name="DeckSelector" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="38,36,0,0" />
		<Label Name="DeckSelectLabel" Content="Select Deck:" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top"/>
		<Button Name="DeckSelected" Content="Select" HorizontalAlignment="Left" Margin="60,68,0,0" VerticalAlignment="Top" Width="75" Click="DeckSelected_Click"/>
	</Grid>
</Window>
