<UserControl x:Class="DeckStats.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="220">
	<Grid Margin="0,0,10,0">
		<Button Content="Start Game" HorizontalAlignment="Left" Margin="41,10,0,0" VerticalAlignment="Top" Width="130" Height="30" Click="Start_Click"/>
		<Button Content="Load Deck" HorizontalAlignment="Left" Margin="41,45,0,0" VerticalAlignment="Top" Width="130" Height="30       " Click="Load_Click"/>
		<Button Content="Update Deck" HorizontalAlignment="Left" Margin="41,80,0,0" VerticalAlignment="Top" Width="130" Height="30       " Click="Update_Click"/>
		<Button Content="Check Stats" HorizontalAlignment="Left" Margin="41,150,0,0" VerticalAlignment="Top" Width="130" Height="30       " Click="Stats_Click"/>
		<Button Content="Exit" HorizontalAlignment="Left" Margin="41,185,0,0" VerticalAlignment="Top" Width="130" Height="30       " Click="Exit_Click"/>
		<Button Content="Remove Deck" HorizontalAlignment="Left" Margin="41,115,0,0" VerticalAlignment="Top" Width="130" Height="30       " Click="Remove_Click"/>

	</Grid>
</UserControl>
